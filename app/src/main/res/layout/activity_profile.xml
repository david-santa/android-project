<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_list"
    android:id="@+id/profileLayout"
    tools:context=".Profile"
    >
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgProfile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginVertical="45dp"
            android:src="@drawable/ic_baseline_person_24"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMailUser"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgProfile"
            android:layout_marginVertical="20dp"
            android:textSize="15sp"

            />

        <ImageView
            android:id="@+id/imgMail"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintTop_toBottomOf="@id/tvMailUser"
            android:layout_marginVertical="100dp"
           android:background="@drawable/ic_baseline_email_24"
            style="@style/btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvMail"
            app:layout_constraintStart_toEndOf="@id/imgMail"
            app:layout_constraintTop_toBottomOf="@id/tvMailUser"
            android:layout_marginVertical="100dp"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            />

        <ImageView
            android:id="@+id/imgTel"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgMail"
            android:background="@drawable/ic_baseline_phone_24"
            style="@style/btn"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTel"
            app:layout_constraintStart_toEndOf="@id/imgTel"
            app:layout_constraintTop_toBottomOf="@id/imgMail"
            android:layout_marginVertical="10dp"
            android:text="056N-amcartela"
            android:textSize="15sp"
            android:layout_marginStart="20dp"
            />


        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn"
            android:layout_marginBottom="5dp"
            android:text="@string/btnSignOut"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
      />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/btn"
            android:layout_marginBottom="5dp"
            android:text="@string/delete_account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>